    \if A#23\else\if I#24\else\if L#25\else\if V#26\else
    7\fi\fi\fi\fi\fi\fi\fi}%
  \def\@worda{}%
  \ifnum\@numbercase>6
    \def\@worda{#3}\typeout{Unknown caseID: `#2'.}%
  \else
    \ifx\@partofspeech\@temp
      \ifnum\@numbercase=6
        \def\@worda{#3}%
        \typeout{Adjective does not have vocative case.}%
      \else
        \@declineword{#3}\@nil
